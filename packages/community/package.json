{
  "name": "engram-extension",
  "version": "0.1.0",
  "description": "Save, search, and reuse AI conversations with end-to-end encryption. Works with ChatGPT, Claude, and Perplexity.",
  "private": true,
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.9.0",
    "@supabase/supabase-js": "^2.87.1",
    "@xenova/transformers": "^2.17.2",
    "automerge": "^0.14.2",
    "dexie": "^3.2.4",
    "@engram/core": "*",
    "edgevec": "^0.6.0",
    "libsodium-wrappers": "^0.7.11",
    "plasmo": "^0.90.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.6.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@plasmohq/prettier-plugin-sort-imports": "^4.0.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@types/libsodium-wrappers": "^0.7.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "fake-indexeddb": "^5.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "manifest": {
    "name": "Engram",
    "permissions": [
      "storage",
      "identity",
      "sidePanel"
    ],
    "host_permissions": [
      "https://chatgpt.com/*",
      "https://claude.ai/*",
      "https://www.perplexity.ai/*",
      "https://*.supabase.co/*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
  }
}
